<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Login Suite">

    <test name="Smoke Test - Valid Login">

        <parameter name="username" value="tomsmith"/>
        <parameter name="password" value="SuperSecretPassword!"/>

        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>

        <classes>
            <class name="examples.LoginTest2"/>
        </classes>
    </test>

    <test name="Regression Test - Invalid Login">

        <parameter name="username" value="wronguser"/>
        <parameter name="password" value="wrongpass"/>

        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>

        <classes>
            <class name="examples.LoginTest2"/>
        </classes>
    </test>

</suite>
